<%- layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-3">
                <h3>
                    <%= post.title %>
                </h3>
            </div>

            <div class="card listing-card show-card col-6 offset-3 mt-3">
                <img src="<%= post.image.url %>" class="show-img card-img-top mb-3" alt="listing img">
                <div class="card-body">
                    <h3 class="card-text"><i>Event:<a href="/events/<%=post.event._id%>">
                                <%=post.event.name %>
                            </a></i></h3>
                    <p class="card-text"><i>Organized By:<a href="/users/<%=post.owner._id%>/profile">@
                                <%=post.owner.username %></a></i></p>
                    <p class="card-text">"<%= post.caption %>"</p>

                    <!-- like section for the main post -->
                    <div class="like-section">
                        <% if (currUser) { %>
                            <!-- if user is logged in then -->
                            <form method="POST" action="/posts/<%= post._id %>/like" class="d-inline">
                                <!-- if he has already liked the post -->
                                <% if (post.likedBy.includes(currUser._id)) { %>
                                    <button type="submit" class="btn btn-outline-primary like-btn">
                                        <i class="fa fa-heart-broken"></i> Unlike
                                    </button>
                                    <% } else { %>
                                        <!-- if he has not liked the post yet -->
                                        <button type="submit" class="btn btn-outline-primary like-btn">
                                            <i class="fa fa-heart"></i> Like
                                        </button>
                                        <% } %>
                            </form>
                            <% } else { %>
                                <a href="/users/login" class="btn btn-outline-primary like-btn">
                                    <i class="fa fa-heart"></i> Like
                                </a>
                                <% } %>
                                    <span class="likes-count ms-2">
                                        <i class="fa fa-heart likes-icon"></i>
                                        <%= post.likes %>
                                    </span>
                    </div>
                </div>
            </div>

            <br>

            <% if (currUser && currUser._id.equals(post.owner._id)) { %>
                <div class="btns mb-3">
                    <a href="/posts/<%= post._id %>/edit" class="edit-btn btn btn-dark col-1 offset-3">Edit</a>
                    <form method="POST" action="/posts/<%= post._id %>?_method=DELETE">
                        <button class="btn btn-dark offset-6">Delete</button>
                    </form>
                </div>
                <% } %>

                    <div class="col-8 offset-3 mb-3">
                        <hr>
                        <% if (currUser) { %>
                            <h4>Leave a comment</h4>
                            <form novalidate class="needs-validation" action="/posts/<%= post._id %>/comments"
                                method="post">
                                <div class="mb-3 mt-3">
                                    <label class="form-label" for="text">Write how are you feeling !!</label>
                                    <textarea required class="form-control" name="comment[text]" id="text" cols="50"
                                        rows="2"></textarea>
                                    <div class="invalid-feedback">Please add some comment.</div>
                                </div>
                                <button class="btn btn-outline-dark mt-3 mb-3">Submit</button>
                            </form>
                            <hr>
                            <% } %>

                                <% if (post.comments.length) { %>
                                    <div class="row">
                                        <p><b>All Comments</b></p>
                                        <% for (let comment of post.comments) { %>
                                            <div class="card col-5 ms-3 mb-3">
                                                <div class="card-body">
                                                    <!-- Displaying profile picture -->
                                                    <div class="card">
                                                        <a href="/users/<%=comment.author._id%>/profile">
                                                            <div class="d-flex align-items-center border border-medium">
                                                                <img src="<%= comment.author.profile.profileImage.url %>"
                                                                    class="profile-img img-fluid rounded-circle border border-dark mt-2 ms-2"
                                                                    alt="Profile Image"
                                                                    style="width: 50px; height: 50px;">
                                                                <h5 class="card-title mt-3"><i>@<%=
                                                                            comment.author.username %></i></h5>
                                                                <!-- Display heart and user picture if post owner liked the comment -->
                                                                <% if (comment.likedBy.includes(post.owner._id)) { %>
                                                                    <span class="ms-auto">
                                                                        <i class="fa fa-heart text-danger"></i>
                                                                        <img src="<%= post.owner.profile.profileImage.url %>"
                                                                            class="profile-img img-fluid rounded-circle border border-dark mt-2 ms-2 me-1"
                                                                            alt="Owner's Profile Image"
                                                                            style="width: 25px; height: 25px;">
                                                                    </span>
                                                                    <% } %>
                                                            </div>
                                                        </a>
                                                        <p class="card-text">
                                                            <%= comment.text %>
                                                        </p>

                                                        <!-- Actions Section for Comments -->
                                                        <div
                                                            class="actions-section d-flex justify-content-between mt-3">
                                                            <!-- Like Section for Comments -->
                                                            <div class="like-section">
                                                                <% if (currUser) { %>
                                                                    <!-- if user is logged in then -->
                                                                    <form method="POST"
                                                                        action="/posts/<%= post._id %>/comments/<%= comment._id %>/like"
                                                                        class="d-inline">
                                                                        <!-- if he has already liked the post -->
                                                                        <% if (comment.likedBy.includes(currUser._id)) {
                                                                            %>
                                                                            <button type="submit"
                                                                                class="btn btn-outline-primary like-btn">
                                                                                <i class="fa fa-heart-broken"></i>
                                                                                Unlike
                                                                            </button>
                                                                            <% } else { %>
                                                                                <!-- if he has not liked he post yet -->
                                                                                <button type="submit"
                                                                                    class="btn btn-outline-primary like-btn">
                                                                                    <i class="fa fa-heart"></i> Like
                                                                                </button>
                                                                                <% } %>
                                                                    </form>
                                                                    <% } else { %>
                                                                        <a href="/users/login"
                                                                            class="btn btn-outline-primary like-btn">
                                                                            <i class="fa fa-heart"></i> Like
                                                                        </a>
                                                                        <% } %>
                                                                            <span class="likes-count ms-2">
                                                                                <i class="fa fa-heart likes-icon"></i>
                                                                                <%= comment.likes %>
                                                                            </span>
                                                            </div>

                                                            <!-- Delete Button Form for Comments -->
                                                            <% if (currUser && currUser._id.equals(comment.author._id))
                                                                { %>
                                                                <form method="post"
                                                                    action="/posts/<%= post._id %>/comments/<%= comment._id %>?_method=DELETE">
                                                                    <button type="submit"
                                                                        class="btn btn-sm btn-danger">Delete</button>
                                                                </form>
                                                                <% } %>
                                                        </div>

                                                        <!-- Add Reply Form -->
                                                        <% if (currUser) { %>
                                                            <form novalidate class="needs-validation mt-3"
                                                                action="/posts/<%= post._id %>/comments/<%=comment._id%>/reply"
                                                                method="post">
                                                                <div class="mb-3">
                                                                    <label class="form-label" for="replyText">Reply to
                                                                        this comment</label>
                                                                    <textarea required class="form-control"
                                                                        name="comment[text]" id="replyText" cols="30"
                                                                        rows="1"></textarea>
                                                                    <div class="invalid-feedback">Please add a reply.
                                                                    </div>
                                                                </div>
                                                                <button
                                                                    class="btn btn-outline-dark btn-sm">Reply</button>
                                                            </form>
                                                            <% } %>

                                                                <!-- Display Replies -->
                                                                <div class="replies ms-3">
                                                                    <% if (comment.replies.length) { %>
                                                                        <p><b>Replies</b></p>
                                                                        <% for (let reply of comment.replies) { %>
                                                                            <div class="card mt-2">
                                                                                <div class="card-body">
                                                                                    <div class="card">
                                                                                        <div
                                                                                            class="d-flex align-items-center border border-medium">
                                                                                            <img src="<%= reply.author.profile.profileImage.url %>"
                                                                                                class="profile-img img-fluid rounded-circle border border-dark mt-2 ms-2"
                                                                                                alt="Profile Image"
                                                                                                style="width: 50px; height: 50px;">
                                                                                            <h6
                                                                                                class="card-title mb-0 me-2">
                                                                                                <i><a
                                                                                                        href="/users/<%=reply.author._id%>/profile">@
                                                                                                        <%= reply.author.username
                                                                                                            %></a></i>
                                                                                            </h6>
                                                                                            <!-- Display heart and user picture if post owner liked the reply -->
                                                                                            <% if
                                                                                                (reply.likedBy.includes(post.owner._id))
                                                                                                { %>
                                                                                                <span class="ms-auto">
                                                                                                    <i
                                                                                                        class="fa fa-heart text-danger"></i>
                                                                                                    <img src="<%= post.owner.profile.profileImage.url %>"
                                                                                                        class="profile-img img-fluid rounded-circle border border-dark mt-2 ms-2"
                                                                                                        alt="Owner's Profile Image"
                                                                                                        style="width: 25px; height: 25px;">
                                                                                                </span>
                                                                                                <% } %>
                                                                                        </div>
                                                                                        <p class="card-text">
                                                                                            <%= reply.text %>
                                                                                        </p>

                                                                                        <!-- Actions Section for Replies -->
                                                                                        <div
                                                                                            class="actions-section d-flex justify-content-between mt-3">
                                                                                            <!-- Like Section for Replies -->
                                                                                            <div class="like-section">
                                                                                                <% if (currUser) { %>
                                                                                                    <!-- if user is logged in then -->
                                                                                                    <form method="POST"
                                                                                                        action="/posts/<%= post._id %>/comments/<%= comment._id %>/replies/<%= reply._id %>/like"
                                                                                                        class="d-inline">
                                                                                                        <!-- if he has already liked the post -->
                                                                                                        <% if
                                                                                                            (reply.likedBy.includes(currUser._id))
                                                                                                            { %>
                                                                                                            <button
                                                                                                                type="submit"
                                                                                                                class="btn btn-outline-primary like-btn">
                                                                                                                <i
                                                                                                                    class="fa fa-heart-broken"></i>
                                                                                                                Unlike
                                                                                                            </button>
                                                                                                            <% } else {
                                                                                                                %>
                                                                                                                <!-- if he has not liked he post yet -->
                                                                                                                <button
                                                                                                                    type="submit"
                                                                                                                    class="btn btn-outline-primary like-btn">
                                                                                                                    <i
                                                                                                                        class="fa fa-heart"></i>
                                                                                                                    Like
                                                                                                                </button>
                                                                                                                <% } %>
                                                                                                    </form>
                                                                                                    <% } else { %>
                                                                                                        <a href="/users/login"
                                                                                                            class="btn btn-outline-primary like-btn">
                                                                                                            <i
                                                                                                                class="fa fa-heart"></i>
                                                                                                            Like
                                                                                                        </a>
                                                                                                        <% } %>
                                                                                                            <span
                                                                                                                class="likes-count ms-2">
                                                                                                                <i
                                                                                                                    class="fa fa-heart likes-icon"></i>
                                                                                                                <%= reply.likes
                                                                                                                    %>
                                                                                                            </span>
                                                                                            </div>

                                                                                            <!-- Delete Button Form for Replies -->
                                                                                            <% if (currUser &&
                                                                                                currUser._id.equals(reply.author._id))
                                                                                                { %>
                                                                                                <form method="post"
                                                                                                    action="/posts/<%= post._id %>/comments/<%= reply._id %>?_method=DELETE">
                                                                                                    <button
                                                                                                        type="submit"
                                                                                                        class="btn btn-sm btn-danger">Delete</button>
                                                                                                </form>
                                                                                                <% } %>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                            <% } %>
                                                                                <% } %>
                                                                </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <% } %>
                                    </div>
                                    <% } %>
                    </div>
        </div>
    </body>