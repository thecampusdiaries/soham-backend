<%- layout("/layouts/boilerplate") %>

    <body>
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="card shadow-sm">
                        <div class="card-header bg-light text-center">
                            <% if (currUser && user._id.toString()===currUser._id.toString()) { %>
                                <h3 class="my-0">Your Profile</h3>
                                <% } else { %>
                                    <h3 class="my-0">User Profile</h3>
                                    <% } %>
                        </div>
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-lg-4 text-center">
                                    <!-- User Profile Image -->
                                    <img src="<%= user.profile.profileImage.url %>"
                                        class="rounded-circle img-thumbnail profile-image align-self-center"
                                        alt="Profile Image">
                                </div>
                                <div class="col-lg-8">
                                    <!-- User Details -->
                                    <h5 class="card-title">Email</h5>
                                    <p class="card-text text-muted">
                                        <%= user.email %>
                                    </p>

                                    <h5 class="card-title">Username</h5>
                                    <p class="card-text text-muted">
                                        <%= user.username %>
                                    </p>

                                    <!-- User Bio -->
                                    <h5 class="card-title">Bio</h5>
                                    <p class="card-text text-muted">
                                        <% if (user.profile.bio && user.profile.bio.trim() !=='' ) { %>
                                            <%= user.profile.bio %>
                                                <% } else { %>
                                                    <i>[unset]</i>
                                                    <% } %>
                                    </p>

                                    <!-- Edit and Delete buttons for the profile owner -->
                                    <% if (currUser && user._id.toString()===currUser._id.toString()) { %>
                                        <div class="mt-4">
                                            <a href="/users/<%= user._id %>/profile/edit" class="btn btn-warning mr-2"
                                                target="_blank">Edit Profile</a>
                                            <form action="/users/<%= user._id %>/profile/?_method=DELETE" method="POST"
                                                onsubmit="return confirm('Are you sure you want to delete your profile?');">
                                                <button type="submit" class="btn btn-danger">Delete Profile</button>
                                            </form>
                                        </div>
                                        <% } %>
                                </div>
                            </div>

                            <!-- Future Events Organized by the User -->
                            <div class="mt-5">
                                <h5 class="card-title">Future Events Organized by @<i>
                                        <%= user.username %>
                                    </i></h5>
                                <% for (let event of events) { %>
                                    <% if (new Date(event.date)>= new Date()) { %>
                                        <div class="card mb-3">
                                            <div class="card-header d-flex justify-content-between align-items-center">
                                                <h5 class="card-title mb-0">Event Name: <%= event.name %>
                                                </h5>
                                                <a href="/events/<%= event._id %>" class="btn btn-outline-primary"
                                                    target="_blank">Expand</a>
                                            </div>
                                            <div class="card-body">
                                                <p class="card-text">
                                                    <%= event.description %>
                                                </p>

                                                <!-- Posts associated with the event -->
                                                <div class="row">
                                                    <% for (let post of event.posts) { %>
                                                        <div class="col-md-4 mb-4">
                                                            <a class="listing-link"
                                                                href="/posts/<%= post._id %>" target="_blank">
                                                                <div class="card listing-card h-100">
                                                                    <img src="<%= post.image.url %>"
                                                                        class="card-img-top" alt="<%= post.title %>">
                                                                    <div class="card-body">
                                                                        <p class="card-text"><i>
                                                                                <%= post.caption %>
                                                                            </i></p>
                                                                    </div>
                                                                </div>
                                                            </a>
                                                        </div>
                                                        <% } %>
                                                </div>

                                                <!-- Event Date -->
                                                <p class="card-text">Date: <%= event.date.toLocaleDateString('en-US', {
                                                        year: 'numeric' , month: 'long' , day: 'numeric' ,
                                                        hour: 'numeric' , minute: 'numeric' , hour12: true,
                                                        timeZoneName: 'short' }) %>
                                                </p>
                                            </div>
                                            <a class="btn btn-success" href="#" target="_blank">Click here to
                                                register</a>
                                        </div>
                                        <% } %>
                                            <% } %>
                            </div>

                            <!-- Past Events Organized by the User -->
                            <div class="mt-5">
                                <h5 class="card-title">Past Events Organized by @<i>
                                        <%= user.username %>
                                    </i></h5>
                                <% for (let event of events) { %>
                                    <% if (new Date(event.date) < new Date()) { %>
                                        <div class="card mb-3">
                                            <div class="card-header d-flex justify-content-between align-items-center">
                                                <h5 class="card-title mb-0">Event Name: <%= event.name %>
                                                </h5>
                                                <a href="/events/<%= event._id %>" class="btn btn-outline-primary"
                                                    target="_blank">Expand</a>
                                            </div>
                                            <div class="card-body">
                                                <p class="card-text">
                                                    <%= event.description %>
                                                </p>

                                                <!-- Posts associated with the event -->
                                                <div class="row">
                                                    <% for (let post of event.posts) { %>
                                                        <div class="col-md-4 mb-4">
                                                            <a class="listing-link"
                                                                href="/posts/<%= post._id %>" target="_blank">
                                                                <div class="card listing-card h-100">
                                                                    <img src="<%= post.image.url %>"
                                                                        class="card-img-top" alt="<%= post.title %>">
                                                                    <div class="card-body">
                                                                        <p class="card-text"><i>
                                                                                <%= post.caption %>
                                                                            </i></p>
                                                                    </div>
                                                                </div>
                                                            </a>
                                                        </div>
                                                        <% } %>
                                                </div>

                                                <!-- Event Date -->
                                                <p class="card-text">Date: <%= event.date.toLocaleDateString('en-US', {
                                                        year: 'numeric' , month: 'long' , day: 'numeric' ,
                                                        hour: 'numeric' , minute: 'numeric' , hour12: true,
                                                        timeZoneName: 'short' }) %>
                                                </p>
                                            </div>
                                            <a class="btn btn-secondary disabled" href="#" target="_blank"
                                                aria-disabled="true">Click here to register</a>
                                        </div>
                                        <% } %>
                                            <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>